{
  "name": "typescript-node-starter",
  "version": "1.0.0",
  "description": "a small starter for using TypeScript with Node",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "lint": "eslint src",
    "start": "ts-node ./src/index.ts",
    "start:dev": "ts-node-dev --respawn ./src/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:watchAll": "jest --watchAll",
    "precommit": "lint-staged"
  },
  "author": "Alan B Smith <a.bax.smith@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-conventional": "^13.1.0",
    "@types/jest": "^26.0.24",
    "@types/node": "^16.4.13",
    "@typescript-eslint/eslint-plugin": "^4.29.0",
    "@typescript-eslint/parser": "^4.29.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "husky": "^7.0.1",
    "jest": "^27.0.6",
    "lint-staged": "^11.1.2",
    "prettier": "^2.3.2",
    "ts-jest": "^27.0.4",
    "ts-node": "^10.1.0",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.3.5"
  },
  "lint-staged": {
    "*.ts": "eslint --cache --fix",
    "*.{ts,md}": "prettier --write"
  },
  "dependencies": {},
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alanbsmith/typescript-node-starter.git"
  },
  "bugs": {
    "url": "https://github.com/alanbsmith/typescript-node-starter/issues"
  },
  "homepage": "https://github.com/alanbsmith/typescript-node-starter#readme"
}
